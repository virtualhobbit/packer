{
  "builders": [
    {
      "type":                  "vsphere-iso",

      "vcenter_server":        "{{user `vcenter_server`}}",
      "username":              "{{user `username`}}",
      "password":              "{{user `password`}}",
      "insecure_connection":   "true",

      "vm_name":               "Windows Server 2016",
      "datastore":             "{{user `datastore`}}",
      "folder":                "{{user `folder`}}",
      "create_snapshot":       "false",
      "cluster":               "{{user `cluster`}}",
      "network":               "{{user `network`}}",
      "boot_order":            "disk,cdrom",
      "convert_to_template":   "true",
      "notes":                 "Base OS, VMware Tools, patched up to {{isotime \"20060102\"}}",

      "vm_version":            15,  
      "guest_os_type":         "windows9Server64Guest",

      "communicator":          "winrm",
      "winrm_username":        "{{user `winrm_username`}}",
      "winrm_password":        "{{user `winrm_password`}}",

      "CPUs":                  1,
      "RAM":                   4096,

      "disk_controller_type":  "pvscsi",
      "disk_size":             51200,
      "disk_thin_provisioned": true,

      "network_card":          "vmxnet3",

      "iso_paths": [
        "[{{user `datastore_iso`}}] en_windows_server_2016_updated_feb_2018_x64_dvd_11636692.iso",
        "[{{user `datastore_iso`}}] VMware-tools-windows-11.0.6-15940789.iso"
      ],

      "floppy_files": [
        "{{template_dir}}/setup/"
      ],
      "floppy_img_path":       "[{{user `datastore`}}] Floppies/pvscsi-Windows8.flp",
      "remove_cdrom": true
    }
  ],
  "provisioners": [
    {
      "type":                  "powershell",
      "inline": [
        "powercfg.exe /setactive 8c5e7fda-e8bf-4a96-9a85-a6e23a8c635c"
      ]
    },
    {
      "type":                  "powershell",
      "scripts": [
        "{{template_dir}}/setup/certs.ps1",
        "{{template_dir}}/setup/bginfo.ps1"
      ]
    },
    {
      "type":                  "windows-restart",
      "restart_timeout":       "30m"
    },
    {
      "type":                   "windows-update",
      "search_criteria":        "IsInstalled=0",
      "filters": [
        "exclude:$_.Title -like '*Preview*'",
        "include:$true"
      ]
    }
  ]
}